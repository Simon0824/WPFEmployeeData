<Window x:Class="WpfApp16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp16"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightSteelBlue">
        <GroupBox Header="Dane pracownika" HorizontalAlignment="Left" VerticalAlignment="Top" Width="310" Height="250" Margin="56,44,0,0" >
        </GroupBox>
        <Label Content="Imię" HorizontalAlignment="Left" Margin="83,83,0,0" VerticalAlignment="Top"/>
        <TextBox Name="imie" HorizontalAlignment="Left" Margin="197,83,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="153"/>
        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="83,125,0,0" VerticalAlignment="Top"/>
        <TextBox Name="nazwisko" HorizontalAlignment="Left" Margin="197,133,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="153"/>
        <Label Content="Stanowisko" HorizontalAlignment="Left" Margin="83,178,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="stanowisko" HorizontalAlignment="Left" Margin="197,182,0,0" VerticalAlignment="Top" Width="153">
            <ComboBoxItem Content="Kierownik"/>
            <ComboBoxItem Content="Starszy programista"/>
            <ComboBoxItem Content="Młodszy programista"/>
            <ComboBoxItem Content="Tester"/>
        </ComboBox>
        <Button Background="SteelBlue" BorderBrush="White" Foreground="White" Content="Zatwierdź" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="200" Height="30" Click="Button_Click" Margin="0,363,0,0"/>
        <GroupBox Header="Generowanie hasła" HorizontalAlignment="Right" VerticalAlignment="Top"  Width="310" Height="250" Margin="0,44,41,0" />
        <TextBox Name="iloscznakow" HorizontalAlignment="Right" Margin="0,83,88,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153"/>
        <Label Content="Ile znaków?" HorizontalAlignment="Right" Margin="0,79,258,0" VerticalAlignment="Top"/>
        <CheckBox Name="maleiduze" Content="Małe i wielkie litery" HorizontalAlignment="Right" Margin="0,134,208,0" VerticalAlignment="Top"/>
        <CheckBox Name="cyfry" Content="Cyfry" HorizontalAlignment="Right" Margin="0,161,282,0" VerticalAlignment="Top"/>
        <CheckBox Name="specjalne" Content="Znaki specjalne" HorizontalAlignment="Right" Margin="0,193,228,0" VerticalAlignment="Top"/>
        <Button BorderBrush="White" Background="SteelBlue" Foreground="White"   Name="generuj" Content="Generuj hasło"  Width="80" HorizontalAlignment="Right" Margin="0,248,169,0" VerticalAlignment="Top" Click="generuj_Click"/>
    </Grid>
</Window>
